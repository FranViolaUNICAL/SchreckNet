<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_details"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.schrecknet.MatrixRainView
        android:id="@+id/matrixRain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.schrecknet.MatrixRainView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blood_container"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/terminal"
                android:textSize="30sp"
                android:padding="30dp"
                android:gravity="center"
                android:text="@string/blood">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="50dp">
                <TextView
                    android:id="@+id/blood_potency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/blood_potency"
                    android:textSize="20sp"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </TextView>
                <Spinner
                    android:id="@+id/blood_potency_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/blood_potency_quantity"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="20dp">
                </Spinner>
                <TextView
                    android:id="@+id/humanity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/humanity"
                    android:textSize="20sp"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </TextView>
                <Spinner
                    android:id="@+id/humanity_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/blood_potency_quantity"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="20dp">
                </Spinner>
                <EditText
                    android:id="@+id/blood_surge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/blood_surge_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
                <EditText
                    android:id="@+id/mend_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mend_amount_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
                <EditText
                    android:id="@+id/power_bonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/power_bonus_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
                <EditText
                    android:id="@+id/rouse_re_roll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/rouse_re_roll_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
                <EditText
                    android:id="@+id/feeding_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/feeding_penalty_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
                <EditText
                    android:id="@+id/bane_severity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bane_severity_hint"
                    android:fontFamily="@font/terminal"
                    android:gravity="center">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>