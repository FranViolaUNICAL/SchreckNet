<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CharacterViewActivity">

    <com.example.schrecknet.MatrixRainView
        android:id="@+id/matrixRain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">
    </com.example.schrecknet.MatrixRainView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/cornice_trasparente">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/character_name"
                    android:fontFamily="@font/terminal"
                    android:textSize="30sp"
                    android:padding="20dp"
                    android:text="Placeholder"
                    android:gravity="center">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/player">
                    </TextView>
                    <TextView
                        android:id="@+id/player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/chronicle">
                    </TextView>
                    <TextView
                        android:id="@+id/chronicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/concept">
                    </TextView>
                    <TextView
                        android:id="@+id/concept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/ambition">
                    </TextView>
                    <TextView
                        android:id="@+id/ambition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/predator">
                    </TextView>
                    <TextView
                        android:id="@+id/predator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/sire">
                    </TextView>
                    <TextView
                        android:id="@+id/sire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/clan">
                    </TextView>
                    <TextView
                        android:id="@+id/clan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="@string/generation">
                    </TextView>
                    <TextView
                        android:id="@+id/generation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/terminal"
                        android:textSize="15sp"
                        android:padding="20dp"
                        android:text="Placeholder">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/modify_sheet_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bottone_personalizzato"
            android:fontFamily="@font/terminal"
            android:text="@string/modify_sheet_button">
        </Button>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>