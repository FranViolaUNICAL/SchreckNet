<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.example.schrecknet.MatrixRainView
        android:id="@+id/matrixRain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.schrecknet.MatrixRainView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/attributes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/terminal"
                android:textSize="30sp"
                android:padding="30dp"
                android:gravity="center"
                android:text="@string/physical">
            </TextView>

            <LinearLayout
                android:id="@+id/strength_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/strength"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/strength_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dexterity_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/dexterity"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/dexterity_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stamina_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/stamina"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/stamina_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/terminal"
                android:textSize="30sp"
                android:padding="30dp"
                android:gravity="center"
                android:text="@string/social">
            </TextView>

            <LinearLayout
                android:id="@+id/charisma_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/charisma"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/charisma_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manipulation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/manipulation"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/manipulation_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/composure_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/composure"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/composure_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/terminal"
                android:textSize="30sp"
                android:padding="30dp"
                android:gravity="center"
                android:text="@string/mental">
            </TextView>

            <LinearLayout
                android:id="@+id/intelligence_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/intelligence"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/intelligence_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wits_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/wits"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/wits_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resolve_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/resolve"
                    android:fontFamily="@font/terminal"
                    android:textSize="20sp">
                </TextView>
                <Spinner
                    android:id="@+id/resolve_value"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:entries="@array/hunger_dice_quantity">
                </Spinner>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>